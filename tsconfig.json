{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "outDir": "./build",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./custom.d.ts"]
}
